{
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gaishimo/job-application.git"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "lerna clean",
    "build": "lerna run build",
    "checks": "lerna run checks",
    "emulator": "firebase emulators:start --project ${PROJECT_ID}",
    "preemulator": "export $(cat packages/functions/.env | xargs) && firebase functions:config:get --project $PROJECT_ID > .runtimeconfig.json",
    "functions:config:set": "cd packages/functions; yarn functions:config:set",
    "deploy:hosting:entry-site": "firebase deploy --only hosting:entry-site --project $PROJECT_ID",
    "deploy:functions": "firebase deploy --only functions --project ${PROJECT_ID}",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules --project ${PROJECT_ID}"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.23.1",
    "@typescript-eslint/parser": "^2.23.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "firebase-tools": "^8.2.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "~3.8.3"
  }
}
